<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="overview"
            type="com.androidstrike.javit.models.OverView" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:elevation="12dp"
        android:outlineAmbientShadowColor="@color/silver">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:padding="12dp"
            android:textStyle="bold"
            android:text="@{overview.topic}"
            android:gravity="center_horizontal"
            android:id="@+id/tv_overview_topic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="12dp"
            android:text="@{overview.content}"
            android:id="@+id/overview_content"
            android:layout_below="@id/tv_overview_topic"/>
    </LinearLayout>

    </androidx.cardview.widget.CardView>



</layout>